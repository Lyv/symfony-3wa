     <script>
        $(document).ready(function(){

            $("#note").raty({

            path: "{{ app.request.basePath }}/js/lib/images",
            //app.request.basePath -> affiche le chemin jusqu'à web
            
            scoreName: "{{ formFilm.vars.name }}[spectateurs]" //plutôt que mettre le nom du form en dur: 
            //troiswa_publicbundle_films[spectateurs]

            })

            $("#note input").val(0);

            ;

        })

    </script>

    {% endblock %}











